for ip in {0,1,2,3}; do 
  case "$(uname -s)" in
    Linux)
      docker run --rm -i --privileged --network=host --pid=host alpine nsenter -t 1 -m -u -n -i -- \
        bash -c "ip link add dummy${ip} type dummy; ip addr add 169.254.32.${ip}/32 dev dummy${ip}; ip link set dev dummy${ip} up"
      ;;
    Darwin)
      sudo ifconfig lo0 alias "169.254.32.${ip}" netmask 255.255.255.255
      ;;
  esac
done
